<?xml version="1.0"?>
<ruleset name="Custom PSR12">
  <description>A custom PSR12</description>
  <file>./src/lib/</file>
  <exclude-pattern>./vendor/*</exclude-pattern>
  <arg name="colors"/>
  <arg value="s"/>
  <rule ref="PSR12">
    <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
    <properties>
        <property name="indent" value="2"/>
    </properties>
  </rule>
</ruleset>
